@model IEnumerable<Hubbell.Models.MejoraContinuaProyectos>

@{
    ViewBag.Title = "Proyectos";
}

<h2>Proyectos</h2>

<p>
    @Html.ActionLink("Crear", "CrearProyecto")
</p>
<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.Titulo)*@
            Título
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.FechaInicio)*@
            Fecha de Inicio
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.FechaInicio)*@
            Fecha de Cierre
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaInicio)
        </td>
        <td>
            @if (item.FechaCierre == null)
            {
                <span>Proyecto en progreso</span>
            }
            else
            {
                @Html.DisplayFor(modelItem => item.FechaCierre)
            }
        </td>
        <td>
            @Html.ActionLink("Detalles", "DetallesProyecto", new { id = item.Id }) |
            @Html.ActionLink("Editar", "EditarProyecto", new { id = item.Id }) |
            @Html.ActionLink("Eliminar", "EliminarProyecto", new { id = item.Id })
        </td>
    </tr>
}

</table>
