@model IEnumerable<Hubbell.Models.EmpleadosMes>

@{
    ViewBag.Title = "EmpleadosMes";
}

<h2>Empleados del mes</h2>

<p>
    @Html.ActionLink("Agregar empleado", "AgregarEmpleado")
</p>
<input class="form-control text-box single-line"
       type="text"
       id="input"
       onkeyup="filtrar()"
       placeholder="Ingresar fecha"
>
<p>
<table class="table" id="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NumReloj)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NumReloj)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha)
        </td>
        <td>
            @Html.ActionLink("Editar", "EditaEmpleadoMes", new { id=item.Id }) |
            @Html.ActionLink("Eliminar", "EliminarEmpleadoMes", new { id=item.Id })
        </td>
    </tr>
}
</table>

<script type="text/javascript">
    function filtrar() {
        var fecha = document.getElementById("fecha");
        var input, filter, table, tr, td, i, txtValue;
        input = document.getElementById("input");
        filter = input.value.toUpperCase();
        table = document.getElementById("table");
        tr = table.getElementsByTagName("tr");
        for (i = 0; i < tr.length; i++) {
            td = tr[i].getElementsByTagName("td")[1];
            if (td) {
                txtValue = td.textContent || td.innerText;
                if (txtValue.toUpperCase().indexOf(filter) > -1) {
                    tr[i].style.display = "";
                } else {
                    tr[i].style.display = "none";
                }
            }
        }
    }
</script>