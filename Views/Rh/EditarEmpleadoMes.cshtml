@model Hubbell.Models.EmpleadosMes

@using (Html.BeginForm("EditarEmpleadoMes", "Rh"))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">

        <h1>Editar empleado</h1>
        <h4 style="color:#0094ff;"><strong>Favor de introducir la información solicitada</strong></h4>

        <div class="form-group row">
            <label class="control-label col-md-3">Número de reloj</label>
            <div class="col-md-9">
                @Html.EditorFor(model => model.NumReloj, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group row">
            <label class="control-label col-md-3">Fecha</label>
            <div class="col-md-9">
                @Html.EditorFor(model => model.Fecha, new { htmlAttributes = new { @class = " form-control datepicker", @type = "month" } })
            </div>
        </div>

        <div class="form-group row">
            <label class="control-label col-md-3"></label>
            <div class="col-md-9">
                <input type="submit" class="btn btn-success" value="Editar" />
            </div>
        </div>

    </div>
}
