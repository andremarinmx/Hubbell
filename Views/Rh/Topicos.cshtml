@model IEnumerable<Hubbell.Models.Topicos>

@{
    ViewBag.Title = "Topicos";
}

<h2>Tópicos</h2>

<p>
    @Html.ActionLink("Crear tópico", "CrearTopico")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Img)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="@Html.DisplayFor(modelItem => item.Img)" style="max-width: 75%; height: auto; border-radius: 6px;" />
        </td>
        <td>
            @Html.ActionLink("Eliminar", "EliminarTopico", new { id=item.Id })
        </td>
    </tr>
}

</table>
